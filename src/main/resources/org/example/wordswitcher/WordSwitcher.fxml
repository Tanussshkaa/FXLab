<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.wordswitcher.WordSwitcherController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20"/>
    </padding>

    <HBox spacing="10">
        <TextField fx:id="inputField" promptText="Введите текст..." />
        <Button fx:id="switchButton" onAction="#onSwitchButtonClick"/>
        <TextField fx:id="outputField" promptText="Результат..." editable="false" />
    </HBox>
</VBox>